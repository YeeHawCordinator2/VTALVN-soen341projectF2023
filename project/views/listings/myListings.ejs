<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate </title>
    <link rel="stylesheet" href="../../css/styles.css">
    <link rel="stylesheet" href=" https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
<header>
    <img id="logo3" src="../../css/logo3.png" alt="logo3">
    <a href="/login"> <button id="header-button" >Sign in</button></a>
</header>
<nav class="nav" style = "z-index:1000;">
    <button type="button" class="nav-close" onclick="toggleNav()">
        <ion-icon name="close-outline" size="large"></ion-icon>
    </button>
    <div class="nav-links-container" id="BrokerMenu"  >
        <a href="/buy_rentB" class="nav__link">
            <span class="nav__text">Buy / Rent</span>
            <ion-icon name="cash-outline" size="large"></ion-icon>
        </a>

        <a href="/myListings" class="nav__link">
            <span class="nav__text">My Listings</span>
            <ion-icon name="list-outline" size="large"></ion-icon>

        </a>
        <a href="/editMyInfoB" class="nav__link">
            <span class="nav__text">Personal Info</span>
            <ion-icon name="person-outline" size="large"></ion-icon>
        </a>
        <a href="/showOffers" class="nav__link">
            <span class="nav__text">Offers</span>
            <ion-icon name="cash-outline" size="large"></ion-icon>
        </a>
        <form action="/logout" method="post">
            <button id="header-button"> log out </button>
        </form>
    </div>

</nav>
<main class="main">
    <button onclick="toggleNav()"><ion-icon name="menu-outline"></ion-icon></button>

</main>

<!-- Rest of your website content goes here -->

<div class="container">
    <h1 class="mb-4">My Listings</h1>
    <a href="/newListings" class="btn btn-success">New Listings</a>
    
    <% houses.forEach(houses => { %>
        <div class="card mt-4">
            <div class="card-body">
                <img src="<%= houses.image %>" alt="" class="img-fluid mb-3">
                <h4 class="card-title"><%= houses.name %></h4>
                <div class="card-subtitle text-muted mb-2">
                    Price: <%= houses.price.toString().concat("$") %>
                </div>
                <div class="card-text mb-2"> 
                    <%= houses.location %>
                </div>
                <a href="listings/edit/<%= houses.name %>" class="btn btn-info">Edit</a>
                <form onSubmit="return confirm('Are you sure you want to delete?')" action="/listings/<%= houses.name %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>

<!-- ====================================== -->

<script>
    function toggleNav() {
        document.body.classList.toggle("nav-open");
    }
</script>
<script type="module" src=" https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src=" https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
