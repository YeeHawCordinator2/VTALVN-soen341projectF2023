        </form>

    </div>

</nav>
<main class="main">
    <button onclick="toggleNav()"><ion-icon name="menu-outline"></ion-icon></button>

</main>
<script>
    function toggleNav() {
        document.body.classList.toggle("nav-open");
    }
</script>

<div  id="searchbar">
    <form action="/buy_rentU" method="POST">
        <div class="horizontal">
            <input type="text" class="answ" name ="location" placeholder="Location">
            <input type="text" class="answ" id="minPrice"  name ="minPrice" placeholder="minPrice">
            <input type="text" class="answ" id="maxPrice" name ="maxPrice" placeholder="maxPrice">

            <select name="bath"  class="answ" id="baths">
                <option value="any" disabled selected>Baths</option>
                <option value="any">Any</option>
                <option value="1">1+</option>
                <option value="2">2+</option>
                <option value="3">3+</option>
                <option value="4">4+</option>
                <option value="5">5+</option>
            </select>

            <select name="beds" class="answ" id="beds">
                <option value="any" disabled selected>Beds</option>
                <option value="any">Any</option>
                <option value="1">1+</option>
                <option value="2">2+</option>
                <option value="3">3+</option>
                <option value="4">4+</option>
                <option value="5">5+</option>
            </select>
            <input type="text" id="yearBuilt" class="answ" name ="yearBuild" placeholder="yearBuilt >">
            <select name="floors" id="floors" class="answ">
                <option value="any" disabled selected>Floors</option>
                <option value="any">Any</option>
                <option value="1">1+</option>
                <option value="2">2+</option>
                <option value="3">3+</option>
            </select>
            <select name="garage" id="garage" class="answ">
                <option value="any" disabled selected>Garage</option>
                <option value="any" >Any</option>
                <option value="no">no</option>
                <option value="yes" >yes</option>

            </select>

            <select name="prop" id="propertyType" class="answ">
                <option value="any" disabled selected>Build type</option>
                <option value="any">Any</option>
                <option value="house">House</option>
                <option value="apartment">Apartment</option>
                <option value="condo">Condo</option>

            </select>

        </div>
        <div class="horizontal" id="h2">
            <select name="furnished" id="furnished" class="answ">
                <option value="any" disabled selected>Furnished</option>
                <option value="any" >Any</option>
                <option value="no">no</option>
                <option va lue="yes" >yes</option>
            </select>
            <select name="extra" id="extra" class="answ">
                <option value="any" disabled selected>Extra</option>
                <option value="any" >Any</option>
                <option value="pool">pool</option>
                <option value="gym" >gym</option>
            </select>
            <input type="text" id="propsize" class="answ" name ="propsize" placeholder="Property size >">
            <select name="listing" id="listing" class="answ">
                <option value="any" disabled selected>Listing Type</option>
                <option value="buy" >buy</option>
                <option value="rent">rent</option>
                <option value="sold" >sold</option>
            </select>
            <input type="text" id="time" class="answ" name ="time" placeholder="Listed since(yyyy-mm-dd)">
            <input type="submit" value="Search" id="button">
        </div>
    </form>
</div>

<h1 style="color:red; margin:2%;"> <%= message %> </h1>
<div class="container">
    <h1 class="mb-4">Listings</h1>
    <% houses.forEach(houses => { %>
        <div class="card mt-4">
            <div class="card-body">
                <img src="<%= houses.image %>" alt="" class="img-fluid mb-3">
                <h4 class="card-title"><%= houses.name %></h4>
                <div class="card-subtitle text-muted mb-2">
                    Price: <%= houses.price.toString().concat("$") %>
                </div>
                <div class="card-text mb-2"> 
                    <%= houses.location %>
                </div>
            </div>
            <div class="card-body"> 
                <a href="listings/showU/<%= houses.name %>" class="btn btn-primary"> Read More</a>
            </div>
            <div class="card-body"> 
                <a href="listings/requestU/<%= houses.name %>" class="btn btn-primary">  Request Visit </a>

            </div>
        </div>
    <% }) %>
</div>


<script type="module" src=" https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src=" https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
