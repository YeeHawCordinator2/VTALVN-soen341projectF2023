<!-- Rest of your website content goes here -->

<h1> Submit an offer for <%= houses.name %> </h1>
<h1 style="color:red"><%= message %></h1>
<form action="/offerSubmit" method="POST">
    <div class="container">
    <label>  Listing Name </label><br>
    <input type="text" name="name" value="<%= houses.name %>"><br>
    <label> Broker Name </label><br>
    <input type = "text" name="brkName" value="<%= brokers.name %>"><br>
    <label> Broker License </label><br>
    <input type = "text" name="license" value="<%= brokers.license %>"><br>
    <label> Broker Agency </label><br>
    <input type= "text" name="agency" value="<%= brokers.agency %>"><br>
    <input type= "text" name="Uname" placeholder="Enter client name (First name Last Name)"><br>
    <input type= "text" name="Uemail" placeholder="Enter client email (example@some.com)"><br>
    <input type= "text" name="Uadress" placeholder="Enter client address"><br>
    <input type= "text" name="Uphone" placeholder="Enter client phone (000-000-0000)"><br>
    <label> House Address </label><br>
    <input type= "text" name="adress" value="<%= houses.adress %>"><br>
    <label> House Price </label><br>
    <input type= "text" name="price" value="<%= houses.price %>"><br>
    <input type= "text" name="deed_date" placeholder="Enter deed of sale date (dd/mm/YYYY)"><br>
    <input type= "text" name="occupancy_date" placeholder="Enter date of occupancy (dd/mm/YYYY)"><br>
    <input type="submit" value="Submit">
    <a href="/buy_rentB" class="btn btn-secondary"> Cancel </a>
    </div>
</form>



<script>
    function toggleNav() {
        document.body.classList.toggle("nav-open");
    }
</script>
